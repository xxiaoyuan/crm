<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xypowernode.crm.workbench.dao.ClueActivityRelationDao">
    <delete id="deleteByCids">
        delete
        from tbl_clue_activity_relation
        where clueId in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}
        </foreach>
    </delete>

    <select id="getCountByCids" resultType="int">
        select count(*)
        from tbl_clue_activity_relation
        where clueId in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}
        </foreach>
    </select>

    <delete id="delete">
        delete from tbl_clue_activity_relation where id=#{id}
    </delete>

    <select id="getListByClueId" resultType="ClueActivityRelation">
        select
            id,
            clueId,
            activityId
        from tbl_clue_activity_relation
        where clueId=#{clueId}
    </select>
    
    <insert id="bund">
        insert into tbl_clue_activity_relation(id,clueId,activityId) values(#{id},#{clueId},#{activityId})
    </insert>

	<delete id="unbund">
        delete from tbl_clue_activity_relation where id=#{id}
    </delete>
	
  	
</mapper>

































